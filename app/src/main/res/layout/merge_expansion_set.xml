<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    tools:orientation="vertical"
    tools:paddingStart="5dp"
    tools:paddingTop="12dp"
    tools:parentTag="LinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_right_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_ex"
            fontPath="font/Arial-Bold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp"
            tools:text="Text Text Text Text Text Text Text Text Text Text Text Text Text "
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/ib_arrow_ex"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:layout_marginEnd="5dp"
            android:scaleX="0.5"
            android:scaleY="0.3"
            android:drawableTint="@color/colorGrayBackground"
            android:backgroundTint="@color/colorGrayBackground"
            android:drawableEnd="@drawable/arrow_right" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_text_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text"
        tools:visibility="visible" />

</merge>